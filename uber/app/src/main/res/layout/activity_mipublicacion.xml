<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MipublicacionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="My Publicacion"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!--  Imagen  -->
            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Imagen Principal"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="201dp"
                    android:layout_height="142dp" />


                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Elegir imagen" />


            </LinearLayout>
            <!--  fin de Imagen -->
            <!--  editext y texview al lado  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:text="Nombre"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="" />

            </LinearLayout>
            <!--  /editext y texview al lado  -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:text="edad"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtEdad"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:text="Sede"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spinnerSede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                     />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:text="Estado"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spinnerEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:entries="@array/estado_arrays"
                    android:prompt="@string/estado_pro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Nacionalidad  "


                    android:textSize="17sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spinnerNacionalidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:layout_gravity="end"
                    />


            </LinearLayout>





            <!--   Fecha -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">


            </LinearLayout>
            <!--  fin de fecha -->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Descripcion"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="text|textMultiLine"
                android:gravity="top"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:text="Tarifa 1"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/txtTarifa1"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:text="Tarifa 2"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtTarifa2"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:text="Tarifa 3"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/txtTarifa3"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="" />
            </LinearLayout>

            <TextView
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:text="Url Video"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txtUrlvideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:hint=""
                    android:inputType="textPersonName" />
            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Subir"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/btnSubir" />


        </LinearLayout>


    </ScrollView>



</LinearLayout>